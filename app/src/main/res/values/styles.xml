<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonsTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhiteSolid</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="categoryStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/min_height_for_touch_objects</item>
        <item name="android:textSize">@dimen/category_text_size</item>
        <item name="android:textColor">@color/colorDarkGreySolid</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/vertical_margin</item>
        <item name="android:textColorHighlight">@color/colorWhiteSolid</item>
    </style>

</resources>
